{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Lambda Function to tag the EC2 Instances.",
    "Parameters": {
        "BucketForLambdaCode": {
            "Description": "Select the bucket name where the lambda function code resides",
            "Default": "lambda-satish",
            "Type": "String"
        },
        "LambdaZipFileName": {
            "Description": "Select the Key name in the bucket to consume the code, Code Should be uploaded to Bucker Prior",
            "Default": "update_ec2_tags.zip",
            "Type": "String"
        },
        "ScheduleFrequency": {
            "Description": "How frequently you want to execute the lambda function, Refer here for help https://docs.aws.amazon.com/eventbridge/latest/userguide/scheduled-events.html",
            "Default": "rate(6 hours)",
            "Type": "String"
        }
    },
    "Resources": {
        "EC2TagRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "EC2_TAG_ROLE",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/"
            }
        },
        "EC2TagPolicy": {
            "DependsOn": [
                "EC2TagRole"
            ],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "OnlyEC2TagPolicy",
                "Roles": [
                    {
                        "Ref": "EC2TagRole"
                    }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "logs:*"
                            ],
                            "Resource": [
                                "arn:aws:logs:*:*:*"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": "ec2:Describe*",
                            "Resource": "*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "ec2:DeleteTags",
                                "ec2:CreateTags"
                            ],
                            "Resource": "*"
                        }
                    ]
                }
            }
        },
        "EC2TaggingLambda": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "EC2TagRole",
                "EC2TagPolicy"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "BucketForLambdaCode"
                    },
                    "S3Key": {
                        "Ref": "LambdaZipFileName"
                    }
                },
                "Role": {
                    "Fn::GetAtt": [
                        "EC2TagRole",
                        "Arn"
                    ]
                },
                "Timeout": 300,
                "Description": "To Tag EC2 Instances",
                "Handler": "update_ec2_tags.lambda_handler",
                "FunctionName": "EC2-Auto-Tagging",
                "Runtime": "python3.7",
                "MemorySize": 128
            }
        },
        "ScheduledRule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Description": "Triggers Lambda function at Scheduled Interval",
                "ScheduleExpression": {
                    "Ref": "ScheduleFrequency"
                },
                "Name": "LamdbaScheduler",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "EC2TaggingLambda",
                                "Arn"
                            ]
                        },
                        "Id": "LamdbaScheduler"
                    }
                ]
            }
        },
        "InvokeLambdaPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Fn::GetAtt": [
                        "EC2TaggingLambda",
                        "Arn"
                    ]
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "ScheduledRule",
                        "Arn"
                    ]
                }
            }
        }
    },
    "Outputs": {
        "ExecutionRole": {
            "Description": "Role created ",
            "Value": {
                "Ref": "EC2TagRole"
            }
        },
        "LambdaFunction": {
            "Description": "Role created ",
            "Value": {
                "Ref": "EC2TaggingLambda"
            }
        },
        "EventSchedule": {
            "Description": "Role created ",
            "Value": {
                "Ref": "ScheduledRule"
            }
        }
    }
}
