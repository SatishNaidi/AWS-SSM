{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Lambda Function to tag the EC2 Instances.",
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "Lambda Bucket Name"
                    },
                    "Parameters": [
                        "BucketForLambdaCode"
                    ]
                },
                {
                    "Label": {
                        "default": "Tag EC2 Lambda Configuration"
                    },
                    "Parameters": [
                        "EC2TaggingLambdaCodeZip"
                    ]
                },
                {
                    "Label": {
                        "default": "Update Auto Approval Delay Function"
                    },
                    "Parameters": [
                        "AutoApprovalDelayLambdaCodeZip",
                        "PatchBaselinesToBeModified"
                    ]
                }
            ]
        }
    },
    "Parameters": {
        "BucketForLambdaCode": {
            "Description": "Select the bucket name where the lambda function code resides",
            "Default": "lambda-satish",
            "Type": "String"
        },
        "EC2TaggingLambdaCodeZip": {
            "Description": "Select the Key name in the bucket to consume the code, Code Should be uploaded to Bucket Prior",
            "Default": "update_ec2_tags.zip",
            "Type": "String"
        },
        "LambdaExecSchedule": {
            "Description": "How frequently you want to execute the lambda function, Refer here for help https://docs.aws.amazon.com/eventbridge/latest/userguide/scheduled-events.html",
            "Default": "rate(6 hours)",
            "Type": "String"
        },
        "AutoApprovalDelayLambdaCodeZip": {
            "Description": "Select the Key name in the bucket to consume the code, Code Should be uploaded to Bucket Prior",
            "Default": "add_auto_approval_delay.zip",
            "Type": "String"
        },
        "PatchBaselinesToBeModified": {
            "Description": "List of Patch Baselines in comma seperated values without spaces",
            "Default": "WindowsApprovedPatches,AmazonLinuxApprovedPatches,LinuxApprovedPatches",
            "Type": "String"
        }
    },
    "Resources": {
        "EC2TagRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "EC2_TAG_ROLE",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/"
            }
        },
        "EC2TagPolicy": {
            "DependsOn": [
                "EC2TagRole"
            ],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "OnlyEC2TagPolicy",
                "Roles": [
                    {
                        "Ref": "EC2TagRole"
                    }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "logs:*"
                            ],
                            "Resource": [
                                "arn:aws:logs:*:*:*"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": "ec2:Describe*",
                            "Resource": "*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "ec2:DeleteTags",
                                "ec2:CreateTags"
                            ],
                            "Resource": "*"
                        }
                    ]
                }
            }
        },
        "EC2TaggingLambda": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "EC2TagRole",
                "EC2TagPolicy"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "BucketForLambdaCode"
                    },
                    "S3Key": {
                        "Ref": "EC2TaggingLambdaCodeZip"
                    }
                },
                "Role": {
                    "Fn::GetAtt": [
                        "EC2TagRole",
                        "Arn"
                    ]
                },
                "Timeout": 300,
                "Description": "To Tag EC2 Instances",
                "Handler": "update_ec2_tags.lambda_handler",
                "FunctionName": "EC2-Auto-Tagging",
                "Runtime": "python3.7",
                "MemorySize": 128
            }
        },
        "InvokeLambdaPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Fn::GetAtt": [
                        "EC2TaggingLambda",
                        "Arn"
                    ]
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "ScheduledRule",
                        "Arn"
                    ]
                }
            }
        },
        "UpdateAutoApprovalDelayRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "UpdateAutoApprovalDelayRole",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/"
            }
        },
        "UpdateAutoApprovalDelayPolicy": {
            "DependsOn": [
                "UpdateAutoApprovalDelayRole"
            ],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "UpdateAutoApprovalDelay",
                "Roles": [
                    {
                        "Ref": "UpdateAutoApprovalDelayRole"
                    }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "logs:*"
                            ],
                            "Resource": [
                                "arn:aws:logs:*:*:*"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "ssm:Describe*",
                                "ssm:Get*",
                                "ssm:List*",
                                "ssm:UpdatePatchBaseline"
                            ],
                            "Resource": "*"
                        }
                    ]
                }
            }
        },
        "UpdateAutoApprovalDelayFunction": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "UpdateAutoApprovalDelayRole",
                "UpdateAutoApprovalDelayPolicy"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "BucketForLambdaCode"
                    },
                    "S3Key": {
                        "Ref": "AutoApprovalDelayLambdaCodeZip"
                    }
                },
                "Role": {
                    "Fn::GetAtt": [
                        "UpdateAutoApprovalDelayRole",
                        "Arn"
                    ]
                },
                "Environment": {
                    "Variables": {
                        "patch_baselines": {
                            "Ref": "PatchBaselinesToBeModified"
                        }
                    }
                },
                "Timeout": 300,
                "Description": "Updates Auto Approval Delay for provided Patch Baselines",
                "Handler": "add_auto_approval_delay.lambda_handler",
                "FunctionName": "Update-Auto-Approval-Delay-SSM",
                "Runtime": "python3.7",
                "MemorySize": 128
            }
        },
        "UpdateAutoApprovalDelayFnInvokeLambdaPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Fn::GetAtt": [
                        "UpdateAutoApprovalDelayFunction",
                        "Arn"
                    ]
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "ScheduledRule",
                        "Arn"
                    ]
                }
            }
        },
        "ScheduledRule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Description": "Triggers Lambda function at Scheduled Interval",
                "ScheduleExpression": {
                    "Ref": "LambdaExecSchedule"
                },
                "Name": "LamdbaScheduler",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "EC2TaggingLambda",
                                "Arn"
                            ]
                        },
                        "Id": "EC2Tagging"
                    },
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "UpdateAutoApprovalDelayFunction",
                                "Arn"
                            ]
                        },
                        "Id": "UpdateSSMPatchBaselines"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "ExecutionRole": {
            "Description": "Role created ",
            "Value": {
                "Ref": "EC2TagRole"
            }
        },
        "LambdaFunction": {
            "Description": "Role created ",
            "Value": {
                "Ref": "EC2TaggingLambda"
            }
        },
        "EventSchedule": {
            "Description": "Role created ",
            "Value": {
                "Ref": "ScheduledRule"
            }
        }
    }
}